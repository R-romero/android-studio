<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_onibus"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.fiap.rm76781.onibus.activity_onibus">

    <EditText
        android:id="@+id/edtDistancia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Distância Ônibus"/>

    <EditText
        android:id="@+id/edtLinha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Linha Ônibus"
        android:layout_below="@+id/edtDistancia"/>

    <Button
        android:id="@+id/btnIniciar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtLinha"
        android:layout_marginTop="10dp"
        android:text="Iniciar Serviço"
        android:onClick="iniciar"/>


    <Button
        android:id="@+id/btnParar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnIniciar"
        android:layout_marginTop="10dp"
        android:text="Parar Serviço"
        android:onClick="parar"/>

    <ImageView
        android:layout_below="@id/btnParar"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/onibus_ok"
        android:visibility="invisible"/>


</RelativeLayout>
